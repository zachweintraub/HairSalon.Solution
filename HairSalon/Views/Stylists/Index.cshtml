@using HairSalon.Models;

@{
  Layout = "_Layout";
}

<h4>All Stylists</h4>
@if(Model.Count < 1)
{
  <p>There are no stylists to display!</p>
}

@foreach (Stylist stylist in Model)
{
  <a class="list-item" href="/stylists/@stylist.GetId()">@stylist.GetName()</a><img class="icon-edit list-item" src="~/img/icons/edit.png"><form onclick="return confirm('Are you sure you want to delete this stylist and all associated clients?')" action="stylists/@stylist.GetId()/delete" method="post"><input class="icon" type="image" src="~/img/icons/trash.png"></form>
  <div class="edit-form">@Html.Partial("EditStylist", @stylist)<br></div>
}
<br>
<form action="stylists/new" method="get">
  <button type="submit">Add A Stylist</button>
</form>
